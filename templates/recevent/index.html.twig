{% extends 'front.html.twig' %}

{% block title %}Reclamations Events{% endblock %}

{% block container %}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                            <tr>
                                <th>Receid</th>
                                <th>Nomevent</th>
                                <th>Email</th>
                                <th>Reclevent</th>
                                <th>Status</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for recevent in recevents %}
                                <tr>
                                    <td>{{ recevent.receid }}</td>
                                    <td>{{ recevent.nomevent }}</td>
                                    <td>{{ recevent.email }}</td>
                                    <td>{{ recevent.reclevent }}</td>
                                    <td>{{ recevent.status }}</td>
                                    <td>
                                        <a class="btn btn-primary" href="{{ path('recevent_show', {'receid': recevent.receid}) }}">show</a>
                                        <button class="btn btn-danger " type="button"  onclick="location.href='{{ path('recevent_delete', {'receid': recevent.receid}) }}';"><i class="fa fa-warning"></i> <span class="bold">supprimer</span></button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">pas de reclamations</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <a href="{{ path('recevent_new') }}">Ajouter Reclamation</a>
{% endblock %}
