{% extends 'front.html.twig' %}
{% block container %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            {% for c in listeventproduct %}
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">

                            <div class="product-imitation">

                               <img src="http://127.0.0.1/img/{{ c.image }} "  width="200" height="200">
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                   $ {{ c.prix }}
                                </span>

                                <a href="#" class="product-name"> {{ c.titre }}</a>


                                <div class="small m-t-xs">
                                    {{ c.description }}
                                </div>
                                <div class="m-t text-righ">

                                    <a href="#modal-form" class="btn btn-xs btn-outline btn-primary"
                                       data-toggle="modal">Info <i class="fa fa-long-arrow-right"></i> </a>
                                    <a href="{{ path('participant',{'id':c.idevenement})}}" class="btn btn-xs btn-outline btn-primary"
                                       >Reserver<i class="fa fa-long-arrow-right"></i> </a>
                                    <div id="modal-form" class="modal fade" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-body">
                                                    <div class="wrapper wrapper-content animated fadeInRight">

                                                        <div class="row">
                                                            <div class="col-lg-12">

                                                                <div class="ibox product-detail">
                                                                    <div class="ibox-content">

                                                                        <div class="row">
                                                                            <div class="col-md-5">


                                                                                <div class="product-images">

                                                                                    <div>
                                                                                        <div class="image-imitation">

                                                                                            <img src="http://127.0.0.1/img/{{ c.image }}"  width="200" height="200">
                                                                                        </div>
                                                                                    </div>



                                                                                </div>

                                                                            </div>
                                                                            <div class="col-md-7">

                                                                                <h2 class="font-bold m-b-xs">
                                                                                    {{ c.titre }}
                                                                                </h2>
                                                                                <div class="m-t-md">
                                                                                    <h2 class="product-main-price">
                                                                                        $ {{ c.prix }}

                                                                                    </h2>
                                                                                </div>
                                                                                <hr>

                                                                                <h4>Description de produit</h4>

                                                                                <div class="small text-muted">
                                                                                    {{ c.description }}
                                                                                    <p>Le mot "événement" peut être
                                                                                        remplacé par l'expression
                                                                                        "situation qui soulève une
                                                                                        question".<br/>
                                                                                        Si un moment de ta vie
                                                                                        professionnelle
                                                                                        "t'accroche",<br/>
                                                                                        si tu souhaites y réfléchir, si
                                                                                        tu as envie d'améliorer<br/>
                                                                                        ta capacité de réagir, alors
                                                                                        écris, raconte ! Tu pourras
                                                                                        alors aussi,<br/>
                                                                                        si tu le veux, en discuter avec
                                                                                        d'autres. Les situations "sans
                                                                                        histoire,"<br/>
                                                                                        "banales" sont à écarter.
                                                                                        Cependant ce qui s'y passe ne
                                                                                        doit pas nécessairement être
                                                                                        grave.<br/></p>
                                                                                </div>
                                                                                <br/>
                                                                                <br/>
                                                                                <br/>
                                                                                <br/>

                                                                                <br/>



                                                                            </div>
                                                                        </div>

                                                                    </div>
                                                                    <div class="ibox-footer">

                                                                        Merci de nous rejoindre
                                                                    </div>
                                                                </div>

                                                            </div>
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}