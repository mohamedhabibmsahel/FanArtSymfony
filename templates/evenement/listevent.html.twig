{% extends 'base.html.twig' %}
    {% block path %}
        <h2>List des evenements</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Acceuil</a>
            </li>
            <li class="breadcrumb-item">
                <a>List des evenements</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Evenements</strong>
            </li>
        </ol>
    {% endblock %}
{% block body %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">

                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" >
                                <thead>
                                <tr>
                                    <th>titre</th>
                                    <th>Description</th>
                                    <th>Local</th>
                                    <th>Datedebut</th>
                                    <th>Date fin</th>
                                    <th>nombre de place</th>
                                    <th>prix</th>
                                    <th> Supprimer   </th>
                                    <th>Editer</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for c in list %}
                                    <tr>
                                        <td>{{ c.titre }}</td>
                                        <td>{{ c.description }}</td>
                                        <td>{{ c.locall}}</td>
                                        <td>{{ c.dateDebut }}</td>
                                        <td>{{ c.dateFin }}</td>
                                        <td>{{  c.nombrePlace}}</td>
                                        <td>{{ c.prix }}</td>
                                        <td> <button class="btn btn-danger btn-sm demo4" type="button"  onclick="location.href='{{ path('suppevent',{'id':c.idevenement}) }}';"><i class="fa fa-warning"></i> <span class="bold">supprimer</span></button>
                                        </td>
                                        <td> <button class="btn btn-info  " type="button" onclick="location.href='{{ path('edit',{'id':c.idevenement}) }} ';"><i class="fa fa-paste"></i> Edit</button>
                                        </td>




                                    </tr>
                                {%  endfor %}

                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>titre</th>
                                    <th>Description</th>
                                    <th>Local</th>
                                    <th>Datedebut</th>
                                    <th>Date fin</th>
                                    <th>nombre de place</th>
                                    <th>prix</th>
                                    <th>    </th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}