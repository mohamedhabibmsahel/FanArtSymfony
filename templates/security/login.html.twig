{% extends 'blank.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<body class="gray-bg">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey }}</div>
    {% endif %}
    {% if error %}
        {{  dump(error) }}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}



    <form class="m-t"  action="{{ path('app_login') }}" method="post">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>

                <img src="{{ asset('http://localhost:8080/img/Brainstorm.png') }}"  width="128" alt="Image">

            </div>
            <h2>FanArt</h2>
            <p>Pour les fans de l'art
                <!--Continually expanded and constantly improved Inspinia Admin Them (IN+)-->
            </p>
            <p>Connectez vous </p>
            <div class="form-group">
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
            </div>
            <div class="form-group">
    <input type="password" name="mdp" id="inputPassword" class="form-control"  placeholder="Mot de passe" required>
            </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-sm btn-white btn-block" type="submit">
                Connexion
            </button>
            <a href="{{ path('app_forgot_password_request') }}"><small>Mot de passe oublié ?</small></a>
            <p class="text-muted text-center"><small>Vous n'avez pas de compte ?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="{{ path ('app_register') }}">Créer Compte</a>
<p>
    <a class="btn btn-sm btn-white btn-block" href="{{ path('github_connect') }}"> <img src="https://cdn.icon-icons.com/icons2/2368/PNG/512/github_logo_icon_143772.png" height="16" width="16" style="margin: 20px">Se connecter avec Github</a>
    <a class="btn btn-sm btn-white btn-block" href="{{ path('google_connect') }}"> <img src="https://img.icons8.com/color/452/google-logo.png" height="16" width="16" style="margin: 20px">Se connecter avec Google</a>

    <a class="btn btn-sm btn-white btn-block" href="{{ path('facebook_connect') }}"> <img src="https://icons-for-free.com/iconfiles/png/512/color+facebook+icon-1320168272811213233.png" height="16" width="16" style="margin: 20px">Se connecter avec Facebook</a>
</p>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}


        </div>
    </div>
</form>
{% endblock %}
