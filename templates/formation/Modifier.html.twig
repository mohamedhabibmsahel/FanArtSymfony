{% extends 'base.html.twig' %}
{% block title %}
    Modifier formatiom
{% endblock %}
{%block body%}
<section id="main-content">
    <section class="wrapper">
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-6 col-md-6 col-sm-6">
                {{ form_start(f,{'attr': {'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    <h3><i class="fa fa-angle-right"></i> Domaine </h3>
                    {{ form_errors(f.domaine) }}
                    {{ form_widget(f.domaine,{'attr': {'class': 'form-control' , 'placeholder' : 'Domaine'}}) }}
                </div>

                <div class="form-group">
                    <h3><i class="fa fa-angle-right"></i> Nom formation</h3>
                    {{ form_errors(f.nomformation) }}
                    {{ form_widget(f.nomformation,{'attr': {'class': 'form-control' , 'placeholder' : 'Nom'}}) }}
                </div>
                <div class="form-group" id="data_5">
                    <h3><i class="fa fa-angle-right"></i> Durée de la formation </h3>
                    <div class="input-daterange input-group" id="datepicker">
                        <input type="text" class="form-control-sm form-control" name="start" value="{{ formation.datedebut }}"/>
                        <span class="input-group-addon">jusqu'à</span>
                        <input type="text" class="form-control-sm form-control" name="end" value="{{ formation.datefin }}" />
                    </div>
                </div>
                <div class="form-group">
                    <h3><i class="fa fa-angle-right"></i> Description</h3>
                    {{ form_errors(f.description) }}
                    {{ form_widget(f.description,{'attr': {'class': 'form-control' , 'placeholder' : 'Description'}}) }}
                </div>
                <div class="form-group">
                    <h3><i class="fa fa-angle-right"></i> Prix inscription</h3>
                    <div class="input-group m-b">
                        <span class="input-group-addon">$</span>
                        {{ form_errors(f.prix) }}
                        {{ form_widget(f.prix,{'attr': {'class': 'form-control' , 'placeholder' : 'prix'}}) }}
                        <span class="input-group-addon">.000</span>
                    </div>
                </div>

                    <div class="btn btn-primary btn-sm">
                        <div class="form-send">
                            {{ form_widget(f.Modifier,{'attr': {'class': 'btn btn--radius btn--green ', 'placeholder' : 'Modifier'}}) }}
                        </div>
                    </div>

                    <div class="btn btn-white btn-sm">
                        <div class="form-send">
                            {{ form_widget(f.Annuler,{'attr': {'class': 'btn btn--radius btn--green ', 'placeholder' : 'Annuler'}}) }}
                        </div>
                    </div>

                {{ form_end(f) }}
                </div>
        </div>
    </section>
</section>
    <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
    {% block path %}
        <h2>Modifier formation </h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="Listeformation.html.twig">Liste des formations</a>
            </li>
            <li class="breadcrumb-item">
                <a>Modifier formation</a>
            </li>
        </ol>
    {% endblock %}
{%endblock%}