{% extends 'blank.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <body class="gray-bg">
    <div class="middle-box text-center loginscreen   animated fadeInDown">


        <h5>BrainStorm</h5>
        <img src="{{ asset('http://localhost:8080/img/Brainstorm.png') }}"  width="128" alt="Image">

        <h4>Créez un nouveau compte Via Github</h4>

        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_errors(form) }}

        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.mdp) }}
        {{ form_row(form.numtel) }}
        {{ form_row(form.photo) }}
        {{ form_row(form.type) }}
        {#<button class="btn btn-primary block full-width m-b" onclick="location.href='{{ path }}'">{{ button_label|default('Créer Compte') }}</button>#}
        {{ form_end(form) }}

        <button hidden type="submit" class="btn">Register</button>

    </div>

    </body>

    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#blah').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgInp").change(function(){
            readURL(this);
        });
    </script>
{% endblock %}
