{% extends 'front.html.twig' %}

{% block title %}Reclamations Produits{% endblock %}

{% block container %}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>nomprod</th>
                                <th>reclprod</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for c in recp %}
                                <tr>
                                    <td>{{ c.recpid }}</td>
                                    <td>{{ c.nomprod }}</td>
                                    <td>{{ c.reclprod }}</td>
                                    <td>{{ c.email }}</td>
                                    <td>
                                        <a class="btn btn-primary" href="{{ path('recprod_show', {'recprod': c.recpid}) }}">show</a>
                                        <button class="btn btn-danger " type="button"  onclick="location.href='{{ path('supprecp',{'id':c.recpid}) }}';"><i class="fa fa-warning"></i> <span class="bold">supprimer</span></button>
                                    </td>
                                </tr>
                            {%  endfor %}
                        </table>
                        <a href="{{ path('recprod_add') }}">Ajouter Reclamation</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}