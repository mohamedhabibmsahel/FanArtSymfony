{% extends 'blank.html.twig' %}

{% block title %}Reinitialiser votre mot de passe{% endblock %}

{% block body %}
    <body class="gray-bg">
    <div class="middle-box text-center loginscreenn   animated fadeInDown">
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h2>Changer votre mot de passe</h2>
           {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}


        <button class="btn btn-primary">Envoyez le lien de confirmation</button>
    {{ form_end(requestForm) }}

    </div>
    </body>
{% endblock %}